source 'https://rubygems.org'

gem 'rails', '6.0'
gem 'mime-types', '~> 3.5.2' # Ruby2+ required for mime-types 3.x

group :test do
  gem 'bigdecimal', '1.4.4'
  gem 'sqlite3', '1.5.0'# the database driver for rails
  gem 'jquery-rails' # for including jQuery into the dummy app

  gem 'rspec-rails', '~> 3.0'
  gem 'shoulda-matchers', '~> 2.4'
  gem 'generator_spec'
  gem 'ffaker'
  gem 'capybara'
  gem 'poltergeist' # to use as JS driver for Capybara
end

gemspec path: '../'
